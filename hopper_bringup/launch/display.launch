<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="model" default="$(find hopper_description)/urdf/hopper.xarco"/>
    <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find hopper_description)/rviz/urdf.rviz" required="true" />
    <node name="remote_soundplay_node" pkg="sound_play" type="soundplay_node.py" >
        <remap from="robotsound" to="remote_robotsound"/>
        <remap from="sound_play" to="remote_sound_play"/>
    </node>
    <node name="remote_hopper_speech" pkg="hopper_speech" type="hopper_speech_node.py" >
        <remap from="robotsound" to="remote_robotsound"/>
        <remap from="sound_play" to="remote_sound_play"/>
    </node>
</launch>
