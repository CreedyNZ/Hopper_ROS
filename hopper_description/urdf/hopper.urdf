<?xml version="1.0"?>
<robot name="Hopper">
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <link name="base_link">
        <visual>
            <origin xyz="-0.1 -0.125 0.0"/>
            <geometry>
                <mesh filename="package://hopper_description/meshes/hopper_body.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>
    <link name="right_front_coxa">
        <visual>
            <origin xyz="-0.035 -0.024 0.0"/>        
            <geometry>
                <mesh filename="package://hopper_description/meshes/hopper_leg_coxa.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>
    <joint name="base_to_right_front_coxa" type="fixed">
        <parent link="base_link"/>
        <child link="right_front_coxa"/>
        <origin xyz="0.05 0.115 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>
    <link name="left_front_coxa">
        <visual>
            <origin xyz="-0.035 -0.024 0.0"/>                    
            <geometry>
                <mesh filename="package://hopper_description/meshes/hopper_leg_coxa.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>
    <joint name="base_to_left_front_coxa" type="fixed">
        <parent link="base_link"/>
        <child link="left_front_coxa"/>
        <origin xyz="-0.05 0.115 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>
</robot>
